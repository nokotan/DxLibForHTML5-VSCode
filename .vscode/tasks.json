{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build: Compile (Debug)",
            "command": "emcc",
            "args": [
                // Input
                "Main.cpp", 

                // Output
                "-c", "-o", "Main.o",

                // Compiler Flags
                "-O0", "-std=c++17", "-g3",
                "-pthread", "-fwasm-exceptions",

                // Include Directory
                "-IDxLibForHTML5/include",  

                // em++ Specific Configurations
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build: Link (Debug)",
            "command": "emcc",
            "args": 
            [
                // Input
                "Main.o",

                // Output
                "-o", "index.html",

                // Compiler Flags
                "-O0", "-std=c++17", "-g3", "-gseparate-dwarf",
                "-pthread", "-fwasm-exceptions",

                // Library Directory
                "-LDxLibForHTML5/lib",

                // Dependent Libraries
                "-sUSE_BULLET=1", "-sUSE_FREETYPE=1", 
                "-sUSE_OGG=1", "-sUSE_VORBIS=1", "-sUSE_ZLIB=1",
                "-lDxDrawFunc", "-lDxUseCLib", "-lDxLib",

                // em++ Specific Configurations
                "--emrun",
                "-sFULL_ES2=1",
                "-sALLOW_MEMORY_GROWTH=1",
                "-sPROXY_TO_PTHREAD=1",
                "-sOFFSCREEN_FRAMEBUFFER=1",
                "-sSTACK_SIZE=1MB",
                "'-Wl,--export=emscripten_proxy_finish'",

                // Packaging Configurations
                "--shell-file", "template.html",
                "--post-js", "template.post.js",
                "--preload-file", "assets@/",
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build: Compile (Release)",
            "command": "emcc",
            "args": [
                // Input
                "Main.cpp", 

                // Output
                "-c", "-o", "Main.o",

                // Compiler Flags
                "-O2", "-std=c++17",
                "-pthread", "-fwasm-exceptions",

                // Include Directory
                "-IDxLibForHTML5/include",  

                // em++ Specific Configurations
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build: Link (Release)",
            "command": "emcc",
            "args": 
            [
                // Input
                "Main.o",

                // Output
                "-o", "index.html",

                // Compiler Flags
                "-O2", "-std=c++17",
                "-pthread", "-fwasm-exceptions",

                // Library Directory
                "-LDxLibForHTML5/lib",

                // Dependent Libraries
                "-sUSE_BULLET=1", "-sUSE_FREETYPE=1", 
                "-sUSE_OGG=1", "-sUSE_VORBIS=1", "-sUSE_ZLIB=1",
                "-lDxDrawFunc", "-lDxUseCLib", "-lDxLib",

                // em++ Specific Configurations
                "--emrun",
                "-sFULL_ES2=1",
                "-sALLOW_MEMORY_GROWTH=1",
                "-sPROXY_TO_PTHREAD=1",
                "-sOFFSCREEN_FRAMEBUFFER=1",
                "-sSTACK_SIZE=1MB",
                "'-Wl,--export=emscripten_proxy_finish'",
                "--closure=1",

                // Packaging Configurations
                "--shell-file", "template.html",
                "--post-js", "template.post.js",
                "--preload-file", "assets@/",
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build: Debug",
            "dependsOn": 
            [
                    "Build: Compile (Debug)", "Build: Link (Debug)",
            ],
            "dependsOrder": "sequence",
            "group":{
                    "kind": "build",
                    "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build: Release",
            "dependsOn": 
            [
                    "Build: Compile (Release)", "Build: Link (Release)",
            ],
            "dependsOrder": "sequence",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Run Local Server and Open Browser",
            "command": "emrun",
            "args": [
                "--port", "8080",
                "--serve_after_close",
                "index.html"
            ],
            "group": "none"
        },
        {
            "type": "shell",
            "label": "Run Local Server",
            "command": "emrun",
            "args": 
            [
                "--hostname", "localhost",
                "--port", "8080",
                "--no_browser",
                "index.html"
            ],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "Now listening at",
                    }
                }
            ],
            "group": "none"
        },
        {
            "label": "Stop Local Server",
            "type": "shell",
            "command": "echo ${input:terminate}",
            "group": "none"
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "Run Local Server"
        }
    ]
}